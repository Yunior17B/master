
#messenger-container
  position fixed
  bottom 0
  right 250px
  z-index 100
  max-width calc(100% - 500px)
  height 305px
  text-align right
  .window
    background #fff
    width 200px
    height 100%;
    display inline-block
    margin-right 15px
    border-top-left-radius 5%
    border-top-right-radius 5%
    .header
      border-top-left-radius 5%
      border-top-right-radius 5%
      background #011627
      text-align left
      padding 10px
      max-height: 75px;
      width 200px
      height 150px;
      .msg-header-img
        width: 40px
        height: 40px
        background-size: cover
        background-position: center center
        margin-right: gld1
        border-radius: 50% 50%
        box-shadow: 0 3px 5px
        margin-left: 5px;
        display inline-block
        vertical-align middle
        position relative
        top -5px;
      .data-user
        display: inline-block
        vertical-align middle
        padding: 0 5px;
        font-size: 10px;
        text-align: left;
        width calc(100% - 65px)
        h1, h2, h3
          display block
          position relative
          top -15px;
          left -10px;
        h1
          color #ffffff
          font-size: 12px;
          font-weight: 500
          padding 0 0 2px;
        h2
          font-size: 12px;
          font-weight 150
          color #dadad9
          padding 0 0 2px;
        h3
          font-size: 12px;
          font-weight 150
          color #dadad9
          padding 0 0 2px;
        span
          display block
          vertical-align middle
          color white2
          font-size: 15px;
          margin-left 105px;
          margin-bottom -17%;
          .fa-minus
            display inline-block
            overflow: hidden;
            position: relative;
            left: -15px;
            top: -15px;
            .active, .fa-minus:focus
              transform translateY(0);
              height 75%


    .message-window
      text-align left
      padding 10px
      overflow: auto;
      p
        background: #efefef none repeat scroll 0 0;
        border-radius: 10px
        color: #646464
        font-size: 14px
        padding: 5px 10px 5px 12px
        width: 100%
        position relative
      .time
        color: #777
        display: block
        font-size: 9px;
        margin: 8px 0 0
        margin-top -11px;
      .received-chats-img
        display: inline-block
        width: 20px
        height: 20px
        z-index 101
        background-size: cover
        background-position: center center
        border-radius: 50% 50%
        margin-right: gld1
        margin-top -5px;
        margin-left -5px;
        float: left
        position absolute
    .msg-bottom
      display block
      height: 10%
      background-color: white
      margin-top 107px;
      padding:0;
      .input-group
        display block
        float: right
        margin-top: 5px;
        margin-right: 20px
        outline: none
        width: 60%
      .input-group-text
        display block
        vertical-align middle
        background: transparent
        border-top-left-radius 5%
        border-top-right-radius 5%
        .fa
          display block
          margin-top: 10px;
          margin-right: 15px;
          font-size: 14px;
          color #033d6c
          float right
          vertical-align middle
      .plus-icon
        display block
        vertical-align middle
        background: transparent
        border: none
        .fa
          display block
          margin-top: 10px;
          margin-left: 10px;
          font-size: 14px;
          color #033d6c
          float: left
          vertical-align middle